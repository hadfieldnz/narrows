!
!  ROMS/TOMS Standard Input parameters.
!
! Setting the wp variable: <<<wp = run('workpath')>>><<wp>>
! Setting the wp2 variable: <<<wp2 = run('workpath ../..')>>><<wp2>>

! Application title.

       TITLE = ROMS - NZ Shelf Seas barotropic

! C-preprocessing Flag.

    MyAppCPP = NZSHELF_BAROTROPIC

! Input variable information file name.

     VARNAME == varinfo.dat

! Number of nested grids.

      Ngrids =  1

! Grid dimension parameters. See notes below in the Glossary for how to set
! these parameters correctly.

          Lm == 908           ! Number of I-direction INTERIOR RHO-points
          Mm == 540           ! Number of J-direction INTERIOR RHO-points
           N == 1             ! Number of vertical levels

         NAT =  0             ! Number of active tracers (usually, 2)

! Domain decomposition parameters, [1:Ngrids].

      NtileI == <<ni>>
      NtileJ == <<nj>>

! Set lateral boundary conditions keyword. Notice that a value is expected
! for each boundary segment per nested grid for each state variable.
!
!                   W       S       E       N
!
!                   1       2       3       4

   LBC(isFsur) ==   Che     Che     Che     Che         ! free-surface
   LBC(isUbar) ==   Shc     Shc     Shc     Shc         ! 2D U-momentum
   LBC(isVbar) ==   Shc     Shc     Shc     Shc         ! 2D V-momentum

! Time-Stepping parameters
!
! NB: Model run in 50-day chunks

      NTIMES == 720000
          DT == 6.0d0
     NDTFAST == 1

! Input/Output parameters.

       NRREC == <<0 if (index==1) else -1>>
   LcycleRST == F
        NRST == 720000
       NINFO == 10

! Output history and average files parameters
!
! Multiple files now given explicit names--see below

     LDEFOUT == T
        NAVG == 3600
        NSTA == 300

! Horizontal viscosity coefficient: [Ngrids].

       VISC4 == 1.0d7                           ! m4/s

! Constants used in momentum stress computation.

       RDRG2 == 3.0d-3                     ! nondimensional

! Time-stamp assigned for model initialization, reference time
! origin for tidal forcing, and model reference time for output
! NetCDF units attribute.

      DSTART =  7031.0d0                   ! days
  TIDE_START =  0.0d0                      ! days
    TIME_REF =  19900101.0d0               ! yyyymmdd.dd

! Slipperiness parameter: 1.0 (free slip) or -1.0 (no slip)

      GAMMA2 == -1.0D0

! Logical switches (TRUE/FALSE) to increase/decrease horizontal viscosity
! and/or diffusivity in specific areas of the application domain (like
! sponge areas) for the desired application grid.

    LuvSponge == F                              ! horizontal momentum
LtracerSponge == F                              ! temperature, salinity, inert

! Logical switches (TRUE/FALSE) to activate writing of time-averaged
! fields into AVERAGES output files.

Aout(idUbar) == T       ! ubar               2D U-velocity
Aout(idVbar) == T       ! vbar               2D V-velocity
Aout(idFsur) == T       ! zeta               free-surface

! Input NetCDF file names, [1:Ngrids].

     GRDNAME == <<"{}/grd/roms_grd.nc".format(wp2)>>
     ININAME == <<"{}/roms_rst_{:04d}.nc".format(wp,index-1)>>

! Input forcing NetCDF file name(s).

     NFFILES == 1

     FRCNAME == <<"{}/frc/yearly/roms_frc_stress_nzlam_1.20_2009.nc".format(wp2)>> |
                <<"{}/frc/yearly/roms_frc_stress_nzlam_1.20_2010.nc".format(wp2)>> |
                <<"{}/frc/yearly/roms_frc_stress_nzlam_1.20_2011.nc".format(wp2)>> |
                <<"{}/frc/yearly/roms_frc_stress_nzlam_1.20_2012.nc".format(wp2)>>

! Output NetCDF file names, [1:Ngrids].

     RSTNAME == <<"{}/roms_rst_{:04d}.nc".format(wp,index)>>
     HISNAME == <<"{}/roms_his_{:04d}.nc".format(wp,index)>>
     AVGNAME == <<"{}/roms_avg_{:04d}.nc".format(wp,index)>>
     STANAME == <<"{}/roms_sta_{:04d}.nc".format(wp,index)>>
     DIANAME == <<"{}/roms_dia_{:04d}.nc".format(wp,index)>>

     FLTNAME == roms_flt.nc
     GSTNAME == roms_gst.nc
     TLMNAME == roms_tlm.nc
     TLFNAME == roms_tlf.nc
     ADJNAME == roms_adj.nc

! Input ASCII parameter filenames.

     APARNAM =  roms_ass.in
     SPOSNAM =  roms_sta.in
     FPOSNAM =  roms_flt.in
     BPARNAM =  roms_bio.in
     SPARNAM =  roms_sed.in
     USRNAME =  /dev/null

!! The list of variables must be terminated with a comment.
